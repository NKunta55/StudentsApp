@model StudentsCourseDetails.Models.CourseModel


<script type="text/javascript">
    
$(function() {
    $(document).ready(function() {
        $('#btnEdit').click(function() {
            var id = @Model.CourseID;
            $.get('@Url.Action("Edit","Courses")?id=' + id, function(data) {
                $('#divCoursesDteails').html(data);
            });
        });

        $('#btnAdd').click(function(e) {
            $.get('@Url.Action("Create","Courses")', function(data) {
                $('#divCoursesDteails').html(data);
            });
        });
    });
});
</script>

